<resources>

    <!-- Base application theme.  <item name="colorAccent">#7DB9B3</item>
        <item name="colorPrimary">#166678</item>
        <item name="colorPrimaryDark">#0E2E3B</item>
    -->

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="toolbarStyle">@style/LightToolbar</item>-->
    </style>

    <style name="CollapsingToolbarTitleStyle"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>


    <style name="AppTheme" parent="BaseTheme">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="LightToolbar" parent="Widget.AppCompat.Toolbar">
        <!--<item name="titleTextColor">@color/titleTextColor</item>-->
    </style>


    <style name="AppTheme.Activity" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="text_margin_style">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="about_text">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
