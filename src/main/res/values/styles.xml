<resources>

    <!-- Base application theme.  <item name="colorAccent">#7DB9B3</item>-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#166678</item>
        <item name="colorPrimaryDark">#0E2E3B</item>
        <item name="colorAccent">#FBC02D</item>

    </style>

    <style name="AppTheme.Activity" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="text_margin_style">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="about_text">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
