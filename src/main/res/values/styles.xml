<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#4b342f</item>
        <item name="colorPrimaryDark">#231714</item>
        <item name="colorAccent">@color/md_red_400</item>

    </style>

    <style name="AppTheme.Activity" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="text_margin_style">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="about_text">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
